.container
  .row
    .col-md-9-offset-3
      %table.table.table-condensed
        %thead
          %tr
            %th= 'Pożyczkobiorca'
            %th= 'Data zawarcia umowy'
            %th= 'Kwota netto (do spłaty)'
            %th= 'Okres'
            %th= 'Dzień wpłaty (1 rata)'
            %th= 'Wpłata (1 rata)'
            %th= 'Dzień wpłaty (2 rata)'
            %th= 'Wpłata (2 rata)'
            %th= 'Dzień wpłaty (3 rata)'
            %th= 'Wpłata (3 rata)'
            %th= 'Edycja'
        %tbody
          - current_user.loans.each do |loan|
            %tr{class: loan.loan_status}
              %td= link_to loan.borrower.personal_data, borrower_path(loan.borrower.id)
              %td= loan.formatted_day_of_conclusion
              %td= "#{loan.amount} (#{loan.return_amount})"
              %td= loan.duration
              %td= loan.installment_payday(0)
              %td
                = loan.installment_status(0)
                - unless loan.installment_paid?(0)
                  = link_to 'Spłać', pay_installment_loan_path(id: loan.id, installment_index: 0)
              %td= loan.installment_payday(1)
              %td
                = loan.installment_status(1)
                - unless loan.installment_paid?(1)
                  = link_to 'Spłać', pay_installment_loan_path(id: loan.id, installment_index: 1)
              %td= loan.installment_payday(2)
              %td
                = loan.installment_status(2)
                - unless loan.installment_paid?(2)
                  = link_to 'Spłać', pay_installment_loan_path(id: loan.id, installment_index: 2)
              %td= link_to 'Edytuj', edit_loan_path(loan.id)
