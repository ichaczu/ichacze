.col-md-12
  .modal-dialog
    .modal-content
      .panel-heading
        %h3.panel-title="Zaloguj się"
      .panel-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            .form-group
              = f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }
            .form-group
              = f.input :password, label: 'Hasło', required: false, class: 'form-control', input_html: { class: 'form-control' }
            .checkbox
              = f.input :remember_me, inline_label: 'Zapamiętaj mnie', as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Zaloguj", class: "btn btn-primary"
        = render "devise/shared/links"
