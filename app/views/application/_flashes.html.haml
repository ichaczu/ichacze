- if flash.any?
  .flashes
    - user_facing_flashes.each do |key, value|
      %div{class: "alert alert-#{key} alert-dismissable", role: 'alert'}
        = value
        %button{ class: 'close', type: 'button', data: { dismiss: 'alert' }, 'aria-label': 'Close' }
          %span{ 'aria-hidden': 'true' }
            &times;
